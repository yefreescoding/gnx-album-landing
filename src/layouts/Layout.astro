---
import { html, background } from "index.json";

const { lang, title, description, favicon } = html;
const { firstColor, secondColor } = background;
---

<!doctype html>
<html lang={`${lang}`}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={`${description}`} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={`${favicon}`} />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content={`${firstColor}`} />
    <title>{title}</title>
  </head>
  <body class="">
    <div class="page_wrap">
      <slot />
    </div>
  </body>
</html>
<style is:global define:vars={{ firstColor, secondColor }}>
  @import url("https://fonts.googleapis.com/css2?family=Onest:wght@100..900&display=swap");

  html {
    font-family: "Onest", sans-serif;
    scroll-behavior: smooth;
  }

  body.overflow {
    overflow: hidden;

    & .page_wrap::after {
      z-index: 999;
      content: "";
      position: absolute;
      inset: 0;
      backdrop-filter: blur(4px) brightness(95%);
    }
  }

  .page_wrap {
    position: relative;
    background: linear-gradient(var(--firstColor), var(--secondColor));
    min-height: 100vh;
    padding: 2rem 0;
  }

  a {
    text-decoration: none;
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  h1,
  h2,
  h3,
  h4 {
    margin: 0;
  }

  p {
    color: #888;
    font-size: 0.8rem;
    line-height: 1.5;
    margin: 0;
    text-wrap: pretty;
  }

  a {
    cursor: pointer;
    color: inherit;
    text-decoration: none;
  }

  button {
    cursor: pointer;
    color: inherit;
    border: none;
    background-color: transparent;
  }

  /* @media only screen and (max-width: 768px) {
    body {
      width: 80%;
    }
  } */
</style>
